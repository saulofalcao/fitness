<% if @user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			O Formulário contém <%= pluralize(@user.errors.count, "erro") %>.
		</div>
		<ul>
			<%# @er.each do |msg| %>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				
			<% end %>
		</ul>
	</div>
<% end %>


